<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dddanielsc.librarynavigationdate.MainActivity">

    <dddanielsc.navigationdate.NavigationDate
        android:id="@+id/navigation_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_fim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
           android:id="@+id/btn_intervalo_dia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:text="ITERVALO DIA"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_intervalo_semana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ITERVALO SEMANA"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_intervalo_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ITERVALO MÃŠS"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_intervalo_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ITERVALO ANO"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_data_atual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="DATA ATUAL"/>

    </LinearLayout>

</LinearLayout>
